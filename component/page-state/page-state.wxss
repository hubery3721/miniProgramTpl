/* 无数据 */

.page-nodata-image {
  position: relative;
  top: 0;
  display: flex;
  justify-content: center;
}

.page-nodata-image .img {
  width: 400rpx;
  height: 200rpx;
}

.page-title {
  position: relative;
  text-align: center;
  width: 100%;
  padding-top: 4vw;
}

.page-title .page-title-text {
  font-size: 4vw;
  color: #666;
}

.page-desc {
  position: relative;
  text-align: center;
  width: 100%;
  padding-top: 1.33vw;
}

.page-desc .page-desc-text {
  font-size: 3.73vw;
  color: #666;
}

/* 页面错误 */

.page-error-image {
  position: relative;
  width: 100%;
  height: 24.8vw;
  padding-top: 15vw;
  display: flex;
  justify-content: center;
}

.page-error-image .img {
  width: 400rpx;
  height: 200rpx;
}

.retry {
  height: 72rpx;
  line-height: 72rpx;
  width: 192rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(180deg, rgba(255, 125, 90, 1) 0%, rgba(255, 100, 90, 1) 100%);
  border-radius: 200rpx;
  margin-top: 50rpx;
  font-size: 32rpx;
}

.hover-btn {
  opacity: 0.8;
}