/*
    loading 加载中 动画
*/

.container {
  width: 100%;
  background: transparent;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.loader {
  width: 60rpx;
  height: 60rpx;
  animation: circle infinite 1s linear;
  border: 6rpx solid #ff5e68;
  border-top-color: transparent;
  border-radius: 100%;
}

@keyframes circle {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

